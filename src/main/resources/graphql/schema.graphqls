type Post {
    id: ID!
    title: String!
    text: String!
    category: String
    author: Author!
}

type Author {
    id: ID!
    name: String!
    thumbnail: String
    posts: [Post]!
}

type Query {
    recentPosts(count: Int, offset: Int): [Post]!
    postsFrom(authorId: Int): [Post]!

}

type Mutation {
    createPost(title: String!, text: String!, category: String, authorId: Int!) : Post!
    createAuthor(name: String!) : Author!
}