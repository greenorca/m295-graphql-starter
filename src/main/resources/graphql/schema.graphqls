type Post {
    id: ID!
    title: String!
    text: String!
    author: Author!
    createdAt: String
}

type Author {
    id: ID!
    name: String!
    posts: [Post]!
}

type Query {
    recentPosts(count: Int, offset: Int): [Post]!
    postsFrom(authorId: Int): [Post]!

}

type Mutation {
    createPost(title: String!, text: String!,authorId: Int!) : Post!
    createAuthor(name: String!) : Author!
}